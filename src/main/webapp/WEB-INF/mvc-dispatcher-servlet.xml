<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.akvasov.rentadvs.controllers"/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="PageController" class="com.akvasov.rentadvs.backend.controller.PageControllerTestStaticImpl"></bean>

    <bean id="Core" class="com.akvasov.rentadvs.backend.core.Core" scope="singleton"></bean>

    <bean id="FriendsDAO" class="com.akvasov.rentadvs.db.DAO.MongoImpl.FriendsDAOMongoImpl" scope="singleton"></bean>

    <bean id="AdvDAO" class="com.akvasov.rentadvs.db.DAO.MongoImpl.AdvDAOMongoImpl" scope="singleton"></bean>

</beans>